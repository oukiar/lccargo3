					  <fieldset class="container">	  			 			  <div ng-controller="MyController" class="my-controller">			  <div class="pull-right">					  </div>	 	    <div class="row">	      <div class="col-lg-12 col-md-12 container">	          <div class="row">            	            <div class="col-md-6 col-xs-6" style="margin-top:13px;">	          	            </div>	            <div class="col-md-6 col-xs-6" style="margin-top:10px;">			<form class="pure-form" method="post" action="/staff_reservations_filter" align="right">			  			               <label for="filterby" class="pfont">By:</label>			               <select id="filterby" name="filterby">			                   <option value="ClientName">Client's name</option>							   <option value="Status">Status</option>							   <option value="Arrival">Arrival's date</option>							   <option value="Departure">Departure's date</option>			                   <option value="Airline">Airline</option>			                   <option value="Flight">Flight Number</option>							    <option value="People">People</option>			                   <option value="Destination">Destination</option>			                   <option value="Email">Email</option>			               </select>							<input type="text" placeholder="Search" id="searchtext" name="searchtext">	               			               <label for="showfirst" class="pfont">Show First:</label>			               <input type="number" value="5" style="width:60px;" id="showfirst" name="showfirst">			  			        <button type="submit" class="pure-button pure-button-primary">Search</button>			  			</form>	            </div>	          </div>	          	          <div class="panel">	            <div class="panel-body">	              <ul id="list">	                <table class="table table-bordered" id="blueRow">	                <tr>	   				<th>Status</th>	   				<th>Client</th>	   	            <th>Arrival</th>	   	            <th>Departure</th>	   	            <th>Airline</th>	   				<th>Flight#</th>	   				<th>Phone</th>	   				<th>Destination</th>	                </tr>                			<% reservations.forEach(function(reservation){ %>				 <tr dir-paginate="product in product | filter:q |" current-page="currentPage">					<td><div style='text-align:center;'>					<img src='<%= reservation.get("Icon") %>' width='25' height='25' alt='Status' style="cursor:pointer;" id='<%= reservation.get("Status") %>' onclick="<%= reservation.get("Status")%>C('<%= reservation.id %>', this.id)"></div> <%= reservation.get("Status") %></td>							  <td><a href="/<%= reservation.get('ClientID')%>" target="blank" style="text-decoration: none;"> <%= reservation.get("ClientName") %></td>							  <td><%= reservation.get("Arrival") %></td>							  <td><%= reservation.get("Departure") %></td>							  <td><%= reservation.get("Airline") %></td>							  <td><%= reservation.get("Flight") %></td>							  <td><%= reservation.get("Telephone") %></td>							  <td><%= reservation.get("Destination") %></td>							  							  <td><a href="trip/<%=reservation.id%>"><img src='/web/img/icons/view.png' width="25" height="25" alt="Status" style="cursor:pointer;"></a></td>											 <td><img src='<%= reservation.get("Status2")%>' id='<%= reservation.get("Status") %>' width="25" height="25" alt="Change" style="cursor:pointer;"></td>							 	        </tr>							 	 <% }) %>								 								 	                </table>	              </ul>	            </div>	          </div>	       	        </div>	         	      </div>	    </div>	  </fieldset>	  	  <script>	  	$("#filterby").change(function(){		  		if($("#filterby").val() == "Status" )	  		{	  			$("#searchtext").replaceWith("<select id='searchtext' name='searchtext'><option>Confirmed</option><option>Pending</option><option>Cancelled</option></select>");	  		}	  		else if($("#filterby").val() == "ClientName" ||	  				$("#filterby").val() == "Airline" ||	  				$("#filterby").val() == "Flight" ||	  				$("#filterby").val() == "People" ||	  				$("#filterby").val() == "Destination" ||	  				$("#filterby").val() == "Email" )	  		{	  			$("#searchtext").replaceWith("<input type='text' placeholder='Search' id='searchtext' name='searchtext'>");	  		}	  		else if($("#filterby").val() == "Arrival" ||	  				$("#filterby").val() == "Departure")	  		{	  			$("#searchtext").replaceWith("<input type='text'  placeholder='Click for select date' id='searchtext' name='searchtext'>");	  			$( "#searchtext" ).datepicker();	  		}	  	});		  </script>	  	  	  	  
<%moment = require('cloud/moment')%>
<!doctype html>
<html lang="en">
    <head>
        
        <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
        <meta charset="utf-8" />
        <title>LC Cargo</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta content="" name="description" />
        <meta content="" name="author" />

 <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Jura&amp;subset=all">
     <link rel="stylesheet" href="cod/css/styleWareHouse.css">

        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
        <link rel="stylesheet" href="/resources/demos/style.css">
        
        <script src="//www.parsecdn.com/js/parse-1.4.2.min.js"></script>
        
        <script src="/cod/js/qrcode/qrcode.js"></script>
        
        <!--ADMIN REQUIREMENTS-->   
        <% include ../../../generals/ultraAdmin.ejs %>
    
        <script src="/cod/js/common.js"></script>
        
        
    </head>
<body>
    <% var i=0; boxes.forEach(function(box){ %>
        <!--MODAL PARA MOSTAR LABEL-->
			<h2><%= receipt.get("Company").get("name")%></h2>
            
			
            <h4><b>Receipt#: <%= receipt.get("ReceiptNum")%></b></h4>
			<h4><b>User: <%= receipt.get("ReceiptBy").get("Name")%></b></h4>
			<h4><b>Destination: <%= receipt.get("Destination")%></b></h4>
			<h4><b>Hour: <%= moment(receipt.get("ReceiptHour")).format("MM[/]DD[/]YYYY h:mm:ss")  %></b></h4>
			
			<table style="margin-left:250px;">
				<tr>
                    <th style="padding: 5px;" align="center">Weight</th>
                    <th style="padding: 5px;" align="center">Volume</th>
                </tr>
                <tr>
                    <td style="padding: 5px;" align="center" id="WeightLabel"><%= receipt.get("Weight")%></td>
                    <td style="padding: 5px;" align="center" id="VolumeLabel"><%= receipt.get("Volume")%></td>
				 </tr>
			 </table>			    
	        
			<h5><b>Shipper:</b></h5><div id="ShipperLabel"><%if(typeof receipt.get("Shipper") != "undefined"){ %><%= receipt.get("Shipper").get("Name")%><%}%></div>
			<h5><b>Consignee:</b></h5><div id="ConsigneeLabel"><%= receipt.get("Consignee").get("Name")%></div>
			<h5><b>Box:</b></h5><div id="BoxLabel"><%= box.get("Num")%></div>
			<h5><b>Zone:</b></h5><div id="ZoneLabel"><%= receipt.get("Zone")%></div>

            <div style="position:relative; left:233px;  top: -206px;">
			<div id="qrcodeLabel-<%=i%>"></div>
            </div>
		
        <br><br><br>


		<script> new QRCode(document.getElementById("qrcodeLabel-<%=i%>"), 
                                {
                                    text:"<%= JSON.stringify({Receipt:receipt.id, NumBox:box.get("Num")}) %>",
                                    width: 200,
                                    height: 200,
                                }); 
        </script>

    <% i+=1; }) %>


</body>
</html>

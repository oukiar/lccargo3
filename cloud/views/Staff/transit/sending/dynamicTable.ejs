<div id="ware_table">


    <table class="table table-bordered" id="blueRow">
    <tr>
            <th>Rcpt.</th>
            <th>Client</th>
            <th>To</th>
			<!--ATTENTION WE NEED TO MAKE THIS-->
            <th>Date Sent</th><!--ATTENTION WE NEED TO MAKE THIS-->
            <th>Shipment</th>
            <th style="width:5px;">Receive</th>
    </tr>

    <% results.forEach(function(label){%>
	<%if(label["Status"]==="Received"){%>
		 <tr style="">
			 <%}else if(label["Status"]==="Repack"){%>
				  <tr style="background:#FFFAF3">
					  <%}else if(label["Status"]==="NotProcessed"){%>
				  <tr style="background:#F3FAF0">
					  <%}%>
            <td align="center"><a onclick="wareceipt('<%=label['objectId']%>')" href="#openModalB"><%= label["Receipt"]%></a></td>
            <td><%= label["Consignee"]%></td>
            <td><%= label["Warehouse"]%></td>
            <td><%= label["ReceiptDate"]%></td><!--ATTENTION WE NEED DATE TRANSFERED-->
            <td><%= label["Shipment"]%></td>
            <td align="center"><input name="checkship" id="<%=label['objectId']%>" type="checkbox"></td>
			 </tr>
		
    <% }) %>   

    </table>
</div>


<script>

    transferId = -1;

    function opentransfer(objectId)
    {
        transferId = objectId;
    }

    function wareceipt(objectId)
    {
        
        $.post("/getby", 
                {by:"objectId", value:objectId, classvar:"Warehouses"}, 
                function(data){
                
                    wh = JSON.parse(data);
                    
                    
                    $("#ReceiptDate").val(moment(wh["ReceiptDate"]).format("MM[/]DD[/]YYYY") );
                    $("#Agent").val(wh["Agent"]);
                    $("#Transport").val(wh["Transport"]);
                    $("#Warehouse").val(wh["Warehouse"]);
                    $("#Country").val(wh["Country"]);
                    $("#Prices").val(wh["Prices"]);
                    $("#Weight").val(wh["Weight"]);
                    $("#WeightVol").val(wh["WeightVol"]);
                    $("#Volume").val(wh["Volume"]);
                    $("#ExtraCost").val(wh["ExtraCost"]);
                    $("#Invoice").val(wh["Invoice"]);
                    $("#Value").val(wh["Value"]);
                    $("#Zone").val(wh["Zone"]);
                    $("#Content").val(wh["Content"]);
                    $("#GeneralNotes").val(wh["GeneralNotes"]);
                    $("#InternalNotes").val(wh["InternalNotes"]);
                    
                    
                });
    }

    $("#btn_classify").click(
        function()
        {
            $("#classifycolumn").css("display", "block");
			$("#classifyDiv").css("display", "none");
            $("#shipoptions").css("display", "block");
            
            $(".checkship").css("display", "block");
        });
        
		$("#btn_back").click(
			function(){
				$("#classifyDiv").css("display", "block");
				$("#shipoptions").css("display", "none");
				$(".checkship").css("display", "none");
				$("#classifycolumn").css("display", "none");
				
			});
		
    $("#btn_accept").click(
        function()
        {
            checkboxes = document.getElementsByName("checkship");
            
            for(i in checkboxes)
            {
                if(checkboxes[i].checked)
                {        
                    return true;
                }
            }
            
            alert("You must select almost one label");
            return false;
        });


</script>

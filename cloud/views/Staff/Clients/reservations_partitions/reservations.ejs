"Staff/Clients/reservations_partitions/dynamictable",                    itemid: "reservationstable"                });                                }                $("#btn_search").click(function(){            update_table_reservations();        });                      $("#filterdate_reservations").change(function(){            update_table_reservations();        });          $("#filterby_reservations").change(function()            {                filterby_changed("filterby_reservations", "searchtext_reservations", "filterdate_reservations", update_table_reservations);             });	  	</script>	  	  	  	  
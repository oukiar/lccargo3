					  <fieldset class="container">	  			 			  <div ng-controller="MyController" class="my-controller">			  <div class="pull-right">					  </div>	 	    <div class="row">	      <div class="col-lg-12 col-md-12 container">	          <div class="row">            	            <div class="col-md-6 col-xs-6" style="margin-top:13px;">	          	            </div>	            <div class="col-md-6 col-xs-6" style="margin-top:10px;">                    <div align="right">                        <label for="filterby_reservations" class="pfont">By:</label>                                           <select  id="filterby_reservations" name="filterby_reservations">                            <option value="All">All</option>                            <option value="ClientName">Client</option>                            <option value="Airline">Airline</option>                            <option value="Arrival">Arrivals</option>                            <option value="Departure">Departure #</option>                            <option value="Destination">Destination</option>                            <option value="Flight">Flight</option>                            <option value="People">People</option>                            <option value="Status">Status</option>                            <option value="notes">Notes</option>                        </select>                        <!-- IF ALL OR DATE SELECTED THIS SEARCH INPUT IS NOT USE-->                        <input type="hidden" placeholder="Search"  id="searchtext_reservations" name="searchtext_reservations">                                   <label class="pfont">Date:</label>                        <select id="filterdate_reservations" name="filterdate_reservations">                            <option value="All">All</option>                            <option value="Today">Today</option>                            <option value="Yesterday">Yesterday</option>                    